<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Baseball" >

    <com.github.mikephil.charting.charts.RadarChart
        android:id="@+id/speedChart"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@id/guideline5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.39"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

    </com.github.mikephil.charting.charts.RadarChart>

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@drawable/textview_border"
        android:text="  Max Finger Speed："
        android:textColor="#FF17B9A1"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/speedChart" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:columnCount="6"
        android:rowCount="2"
        app:layout_constraintBottom_toTopOf="@+id/guideline6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12">

        <TextView
            android:layout_width="65dp"
            android:layout_height="32dp" />

        <TextView
            android:layout_width="65dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:text="大拇指"
            android:textColor="#000000" />

        <TextView
            android:layout_width="65dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:text="食指"
            android:textColor="#000000" />

        <TextView
            android:layout_width="65dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:text="中指"
            android:textColor="#000000" />

        <TextView
            android:layout_width="65dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:text="無名指"
            android:textColor="#000000" />

        <TextView
            android:layout_width="65dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:text="小拇指"
            android:textColor="#000000" />

        <TextView
            android:layout_width="65dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:text="分數"
            android:textColor="#000000" />

        <!--分數-->
        <TextView
            android:id="@+id/MaxthumbSpeed"
            android:layout_width="65dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/MaxindexSpeed"
            android:layout_width="65dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/MaxmiddleSpeed"
            android:layout_width="65dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/MaxringSpeed"
            android:layout_width="65dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/MaxlittleSpeed"
            android:layout_width="62dp"
            android:layout_height="36dp"
            android:gravity="center"
            android:textColor="#000000" />

    </GridLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.825" />
</androidx.constraintlayout.widget.ConstraintLayout>
